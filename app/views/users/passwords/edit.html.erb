<div class="pass-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <h3 class="text-center"><%= t ".change_pass" %></h3>
    <%= f.hidden_field :reset_password_token %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger"><%= devise_error_messages! %></div>
    <% end %>
    <div class="form-group">
      <%= f.password_field :password, autofocus: true, placeholder: t("users.registrations.new.password"),
        class:"form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: t("users.registrations.new.pass_confirm"),
        class:"form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.submit t(".btn_change"), class: "btn btn-primary btn-block" %>
    </div>  
  <% end %>
</div>
