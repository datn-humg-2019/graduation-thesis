<div class="pass-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h3 class="text-center"><%= t ".title_forget" %></h3>
    <% if resource.errors.any? %>
      <div class="alert alert-danger"><%= devise_error_messages! %></div>
    <% end %>
    <div class="form-group">
      <%= f.text_field :phone, autofocus: true, placeholder: "phone", class:"form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.submit t(".btn_send"), class: "btn btn-primary btn-block" %>
    </div>  
  <% end %>
</div>
