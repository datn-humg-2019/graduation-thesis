<div class="card">
  <div class="card-header text-center">
    <h3>
      Doanh thu trong ngày <%= Time.current.localtime.strftime("%d/%m/%Y") %>
    </h3>
  </div>
  <div class="card-body">
    <div class="">
      <table class="table table-bordered">
        <thead class=" text-danger">
          <tr>
            <th>
              STT
            </th>
            <th>
              CODE
            </th>
            <th>
              SỐ LƯỢNG
            </th>
            <th>
              Doanh thu
            </th>
            <th>
              Lợi nhuận
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render "grid", list: @list %>
        </tbody>
      </table>
    </div>
    <div class="card-footer text-right">
      <%= link_to  "Chi tiết", reports_path(type: 0) %>
    </div>
  </div>
</div>
