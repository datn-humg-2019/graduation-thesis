<div class="container">
  <h1 class="my-4">Sản phầm:
    <small>
      <%= product.name %>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-6">
      <div>
        <% if @images.blank? %>
          Không có dữ liệu hình ảnh
        <% else %>
          <%= render "thumb_images", images: @images %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="my-3">Thông tin</h3>
      <div class="row">
        <%= render "products/pw", pws: @pws %>
      </div>
      <div class="col-md-12">
        <div class="col-md-3">
          <%= link_to edit_product_path(id: @product.id), method: :GET, class: "btn btn-warning" do %>
            <i class="fa fa-edit"></i> Chỉnh sửa
          <% end %>
        </div>
        <div class="col-md-9">
          <div id="qrcode"></div>
        </div>
      </div>
      <h3 class="my-3">Tags</h3>
      <div class="row">
        <%= render "products/tag", tags: @product.tag, status: "show" %>
      </div>
    </div>
    <div class="col-md-12">
      <strong>
        <h3 class="my-3">Description</h3>
      </strong>
      <div class="box-description">
        <%= markdown @pws.has_description.blank? ? @product.description : @pws.has_description.first.description %>
      </div>
    </div>
  </div>
</div>
