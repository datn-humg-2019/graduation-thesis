<div class="container">

  <h1 class="my-4">Product
    <small>
      <%= product.name %>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-6">
      <div>
        <%= render "thumb_images", images: product.images %>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="my-3">thong tin</h3>
      <div class="row">
        <%= render "products/pw", pws: @pws %>
      </div>
      <h3 class="my-3">Tags</h3>
      <div class="row">
        <%= render "products/tag", tags: @product.tag, status: "show" %>
      </div>
    </div>
    <div class="col-md-12">
      <strong>
        <h3 class="my-3">Description</h3>
      </strong>
      <div class="box-description">
        <%= markdown @product.description %>
      </div>
    </div>
  </div>
</div>
