<%= render "url", action: "index" %>
<hr>
<div class="col-md-12">
  <div class="card">
    <div class="card-header">
      <%= render "filter" %>
    </div>
    <hr>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class=" text-primary">
            <tr>
              <th>
                ID
              </th>
              <th>
                CATEGORY
              </th>
              <th>
                NAME
              </th>
              <th>
                TAG
              </th>
              <th>
                IMAGES
              </th>
              <th>
                ACTION
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render "grid_products", products: @products %>
          </tbody>
        </table>
      </div>
    </div>
    <div >
      <%= paginate @products %>
    </div>
  </div>
</div>
